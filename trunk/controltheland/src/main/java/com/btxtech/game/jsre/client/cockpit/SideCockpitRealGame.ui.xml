<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.planetText {
			color: #C7C4BB;
			font-size: 12px;
			font-family: Arial, Helvetica, sans-serif;
			font-weight: bold;
		}
		
		.multiplayerText {
			color: #C7C4BB;
			font-size: 9px;
			font-family: Arial, Helvetica, sans-serif;
		}
		
		.title {
			color: #C7C4BB;
			font-size: 10px;
			font-family: Arial, Helvetica, sans-serif;
			margin-right: 5px;
		}
		.label {
			color: #C7C4BB;
			font-size: 10px;
			font-family: Arial, Helvetica, sans-serif;
		}
	</ui:style>
	<ui:with field='res'
		type='com.btxtech.game.jsre.client.cockpit.images.SideCockpitImageBundle' />
    <ui:with field='msg'
             type='com.btxtech.game.jsre.client.ClientI18nConstants'/>
    <g:VerticalPanel>
		<g:HorizontalPanel>
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<g:Image resource='{res.planet}' />
			</g:Cell>
			<g:VerticalPanel>
				<g:InlineLabel ui:field="planetNameLabel" styleName="{style.planetText}" />
				<g:InlineLabel text="{msg.multiplayer}" styleName="{style.multiplayerText}" />
			</g:VerticalPanel>
		</g:HorizontalPanel>
		<g:HorizontalPanel title="{msg.tooltipLevel}">
			<g:Cell verticalAlignment="ALIGN_BOTTOM">
				<g:InlineLabel text="{msg.level}:" styleName="{style.title}" />
			</g:Cell>
			<g:Cell verticalAlignment="ALIGN_BOTTOM">
				<g:InlineLabel ui:field="levelLabel" styleName="{style.label}"/>
			</g:Cell>
		</g:HorizontalPanel>
		<g:HorizontalPanel title="{msg.tooltipXp}">
			<g:Cell verticalAlignment="ALIGN_BOTTOM">
				<g:InlineLabel text="{msg.xp}:" styleName="{style.title}" />
			</g:Cell>
			<g:Cell verticalAlignment="ALIGN_BOTTOM">
				<g:InlineLabel ui:field="xpLabel" styleName="{style.label}"/>
			</g:Cell>
		</g:HorizontalPanel>
	</g:VerticalPanel>
</ui:UiBinder> 