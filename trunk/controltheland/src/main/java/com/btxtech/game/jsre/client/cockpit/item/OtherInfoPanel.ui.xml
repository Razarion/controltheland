<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .itemtypename {
            font-size: 13px;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold;
        }

        .itemtypedescr {
            font-size: 12px;
            font-family: Arial, Helvetica, sans-serif;
        }
    </ui:style>
    <g:HorizontalPanel width="100%">
        <g:Image ui:field="image"/>
        <g:Cell width="100%">
            <g:VerticalPanel>
                <g:Label ui:field="itemTypeName" styleName="{style.itemtypename}"/>
                <g:HorizontalPanel>
                    <g:Label ui:field="type" styleName="{style.itemtypedescr}"/>
                    <g:Button text="Offer alliance" ui:field="offerAlliance"/>
                </g:HorizontalPanel>
                <g:HTML ui:field="itemTypeDescr" styleName="{style.itemtypedescr}"/>
            </g:VerticalPanel>
        </g:Cell>
    </g:HorizontalPanel>
</ui:UiBinder>