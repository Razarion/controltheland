<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
    <ui:style>
        .tablePanel {
            background: #FFFFFF;
            overflow-y: auto;
            overflow-x: hidden;
        }
        .facebookButton {
            margin: 0;
            padding: 0;
        }
    </ui:style>

    <ui:with field='msg' type='com.btxtech.game.jsre.client.ClientI18nConstants'/>
    <ui:with field='res' type='com.btxtech.game.jsre.client.dialogs.incentive.images.IncentiveImages'/>

    <g:TabPanel width="40em" ui:field="tabPanel">
        <g:Tab width="100%" text="{msg.tabInvite}">
            <g:VerticalPanel width="100%" height="300px">
                <g:Label text="{msg.inviteFriendsDescription}"/>
                <g:CaptionPanel captionText="{msg.inviteFriendsViaFacebook}">
                    <g:PushButton height="32px" width="32px" ui:field="facebookButton" styleName="gwt-PushButton {style.facebookButton}">
                        <g:upFace image='{res.facebookInvite}'/>
                    </g:PushButton>
                </g:CaptionPanel>
                <g:CaptionPanel captionText="{msg.inviteFriendsViaMail}">
                    <g:HorizontalPanel>
                        <g:TextBox ui:field="emailAddressField" width="20em"/>
                        <g:Button ui:field="emailButton" text="{msg.sendButton}"/>
                    </g:HorizontalPanel>
                </g:CaptionPanel>
                <g:CaptionPanel captionText="{msg.inviteFriendsViaUrl}">
                    <g:VerticalPanel width="100%">
                        <g:Label text="{msg.inviteUrlDescription}"/>
                        <g:HorizontalPanel>
                            <g:TextArea ui:field="urlField" width="25em" visibleLines="2" enabled="false"/>
                        </g:HorizontalPanel>
                    </g:VerticalPanel>
                </g:CaptionPanel>
            </g:VerticalPanel>
        </g:Tab>
        <g:Tab width="100%" text="{msg.tabComplete}">
            <g:VerticalPanel width="100%" height="300px">
                <g:Label text="{msg.invitationCrystalBonus}"/>
                <g:ScrollPanel width="100%" height="20em" styleName="{style.tablePanel}">
                    <p1:CellTable width="100%" ui:field="completeTable"/>
                </g:ScrollPanel>
            </g:VerticalPanel>
        </g:Tab>
    </g:TabPanel>
</ui:UiBinder> 