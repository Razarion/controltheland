<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
		
		.razarionlabel {
            color: black;
			font-size: 16px;
			font-family: Arial,Helvetica,sans-serif;
			font-weight: bold;
		}
		.razarionplate {
			background: -webkit-gradient(linear, left top, right bottom, color-stop(0%, rgba(245, 246, 246, 1) ), color-stop(21%, rgba(219, 220, 226, 1) ),	color-stop(49%, rgba(184, 186, 198, 1) ),color-stop(80%, rgba(221, 223, 227, 1) ),	color-stop(100%, rgba(245, 246, 246, 1) ) );
			background: -webkit-linear-gradient(-45deg, rgba(245, 246, 246, 1) 0%,rgba(219, 220, 226, 1) 21%, rgba(184, 186, 198, 1) 49%,rgba(221, 223, 227, 1) 80%, rgba(245, 246, 246, 1) 100% );
			margin-bottom: 2px;
			padding: 10px;
			border-top: 1px solid #ddd;
			border-right: 2px solid #888;
			border-bottom: 2px solid #888;
			border-left: 1px solid #ccc;
		}
	</ui:style>
	<g:HTMLPanel width="100%"
		height="100%">
		<g:VerticalPanel width="100%" height="" spacing="2">
			<g:HorizontalPanel styleName="{style.razarionplate}" width="100%">
				<g:Cell verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="???" styleName="{style.razarionlabel}" ui:field="razarionAmount" />
				</g:Cell>
				<g:Cell horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE">
					<g:Button text="Market" ui:field="button"/>
				</g:Cell>
			</g:HorizontalPanel>
			<g:FlowPanel ui:field="itemPlates" width="100%" height="100%" />
			<g:VerticalPanel ui:field="groundPlates"/>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 