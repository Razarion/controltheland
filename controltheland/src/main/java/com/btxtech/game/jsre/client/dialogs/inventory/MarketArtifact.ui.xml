<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
				.itemplate {
			margin-right: 2px;
			margin-bottom: 2px;
			padding: 10px;
			float: left;
			border: 1px solid #ccc;
			border-bottom: 2px solid #888;
			border-right: 2px solid #888;
			border-top: 1px solid #ddd;
			border-radius: 4px;
			background: -webkit-gradient(linear, left top, right bottom, color-stop(0%, rgba(245, 246, 246, 1) ), color-stop(21%, rgba(219, 220, 226, 1) ),	color-stop(49%, rgba(184, 186, 198, 1) ),color-stop(80%, rgba(221, 223, 227, 1) ),	color-stop(100%, rgba(245, 246, 246, 1) ) );
			background: -webkit-linear-gradient(-45deg, rgba(245, 246, 246, 1) 0%,rgba(219, 220, 226, 1) 21%, rgba(184, 186, 198, 1) 49%,rgba(221, 223, 227, 1) 80%, rgba(245, 246, 246, 1) 100% );
            background: -moz-linear-gradient(-45deg, rgba(245, 246, 246, 1) 0%,rgba(219, 220, 226, 1) 21%, rgba(184, 186, 198, 1) 49%,rgba(221, 223, 227, 1) 80%, rgba(245, 246, 246, 1) 100% );
            background: -o-linear-gradient(-45deg, rgba(245, 246, 246, 1) 0%,rgba(219, 220, 226, 1) 21%, rgba(184, 186, 198, 1) 49%,rgba(221, 223, 227, 1) 80%, rgba(245, 246, 246, 1) 100% );
            filter: literal("progid:DXImageTransform.Microsoft.gradient(startColorstr = '#F8F8F8', endColorstr = '#A0A0A0')");
		}
		.description {
			padding: 5px;
			border: 1px solid #ccc;
			border-bottom: 1px solid #888;
			border-right: 1px solid #888;
			border-top: 1px solid #ddd;
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(206,206,206,1)), color-stop(51%,rgba(239,245,247,1)), color-stop(95%,rgba(198,198,198,1)));
            background: -webkit-linear-gradient(top, rgba(206,206,206,1) 0%,rgba(239,245,247,1) 51%,rgba(198,198,198,1) 95%);
            background: -moz-linear-gradient(top, rgba(206,206,206,1) 0%,rgba(239,245,247,1) 51%,rgba(198,198,198,1) 95%);
            background: -o-linear-gradient(top, rgba(206,206,206,1) 0%,rgba(239,245,247,1) 51%,rgba(198,198,198,1) 95%);
            filter: literal("progid:DXImageTransform.Microsoft.gradient(startColorstr = '#F8F8F8', endColorstr = '#A0A0A0')");
		}
		.buy {
			padding: 5px;
			background-color: lightgray;
			border: 1px solid #ccc;
			border-bottom: 1px solid #888;
			border-right: 1px solid #888;
			border-top: 1px solid #ddd;
			background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,255,255,1)), color-stop(50%,rgba(241,241,241,1)), color-stop(51%,rgba(225,225,225,1)), color-stop(100%,rgba(246,246,246,1)));
            background: -webkit-linear-gradient(top, rgba(255,255,255,1) 0%,rgba(241,241,241,1) 50%,rgba(225,225,225,1) 51%,rgba(246,246,246,1) 100%);        
            background: -moz-linear-gradient(top, rgba(255,255,255,1) 0%,rgba(241,241,241,1) 50%,rgba(225,225,225,1) 51%,rgba(246,246,246,1) 100%);
            background: -o-linear-gradient(top, rgba(255,255,255,1) 0%,rgba(241,241,241,1) 50%,rgba(225,225,225,1) 51%,rgba(246,246,246,1) 100%);
            filter: literal("progid:DXImageTransform.Microsoft.gradient(startColorstr = '#F8F8F8', endColorstr = '#A0A0A0')");
		}
		.itemlabel {
            color: black;
		    font-size: 14px;
			font-family: Arial,Helvetica,sans-serif;
			font-weight: bold;
		}
		.coastLabel {
            color: black;
			font-size: 11px;
			font-family: Arial,Helvetica,sans-serif;
			font-weight: bold;
		}
	</ui:style>
	<g:HorizontalPanel styleName="{style.itemplate}" spacing="5">
		<g:Cell verticalAlignment="ALIGN_MIDDLE">
			<g:Image width="100px" height="100px" ui:field="image" />
		</g:Cell>
		<g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_RIGHT">
			<g:VerticalPanel width="80px" height="100px" styleName="{style.description}">
				<g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER">
					<g:Label text="???" styleName="{style.itemlabel}" ui:field="artifactNameLabel" />
				</g:Cell>
				<g:Cell verticalAlignment="ALIGN_BOTTOM" horizontalAlignment="ALIGN_CENTER">
					<g:VerticalPanel styleName="{style.buy}" width="78px" height="28px">
						<g:Cell verticalAlignment="ALIGN_MIDDLE">
							<g:Label text="???" styleName="{style.coastLabel}" ui:field="coastLabel" />
						</g:Cell>
						<g:Cell horizontalAlignment="ALIGN_CENTER"	verticalAlignment="ALIGN_MIDDLE">
							<g:Button text="Buy" ui:field="buyItemButton" />
						</g:Cell>
					</g:VerticalPanel>
				</g:Cell>
			</g:VerticalPanel>
		</g:Cell>
	</g:HorizontalPanel>
</ui:UiBinder> 