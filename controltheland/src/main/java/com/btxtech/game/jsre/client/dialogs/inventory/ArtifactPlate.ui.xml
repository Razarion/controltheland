<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .important {
            font-weight: bold;
        }

        .statustext {
            color: black;
            font-size: 10px;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold;
            text-shadow: 1px 1px 1px #000000;
            z-index: 2;
        }

        .imagestyle {
            z-index: 1;
        }
    </ui:style>
    <g:VerticalPanel ui:field="panel">
        <g:Label text="???" ui:field="label" styleName="{style.statustext}"/>
        <g:Image ui:field="image" styleName="{style.imagestyle}" width="20px" height="20px"/>
    </g:VerticalPanel>
</ui:UiBinder>