<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.platte {
			margin: 5px;
			-webkit-box-shadow: 1px 1px 1px 1px rgba(100, 100, 100, 1);
			box-shadow: 1px 1px 1px 1px rgba(100, 100, 100, 1);
		}
		
		.price {
			font-size: 12px;
			font-family: Arial, Helvetica, sans-serif;
		}
		
		.image {
			z-index: 1;
		}
		
		.itemLimit {
			z-index: 2;
			font-size: 10px;
			font-family: Arial, Helvetica, sans-serif;
			background: rgba(0, 0, 0, 0.4);
			color: #FFFFFF;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.platte}">
		<g:AbsolutePanel width="40px" height="40px">
			<g:at left="0" top="0">
				<g:Image ui:field="image" width="40px" height="40px"
					styleName="{style.image}" />
			</g:at>
			<g:at left="0" top="0">
				<g:Label ui:field="itemLimitLabel" styleName="{style.itemLimit}" />
			</g:at>
		</g:AbsolutePanel>
		<g:Label ui:field="priceLabel" styleName="{style.price}" />
	</g:VerticalPanel>
</ui:UiBinder>