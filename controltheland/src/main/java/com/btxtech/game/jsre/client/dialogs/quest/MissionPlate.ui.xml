<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .itemplate {
            margin-right: 2px;
            margin-bottom: 2px;
            float: left;
            border: 1px solid #ccc;
            border-bottom: 2px solid #888;
            border-right: 2px solid #888;
            border-top: 1px solid #ddd;
            border-radius: 4px;
            background: -webkit-gradient(linear, left top, right bottom, color-stop(0%, rgba(245, 246, 246, 1)), color-stop(21%, rgba(219, 220, 226, 1)), color-stop(49%, rgba(184, 186, 198, 1)), color-stop(80%, rgba(221, 223, 227, 1)), color-stop(100%, rgba(245, 246, 246, 1)));
            background: -webkit-linear-gradient(-45deg, rgba(245, 246, 246, 1) 0%, rgba(219, 220, 226, 1) 21%, rgba(184, 186, 198, 1) 49%, rgba(221, 223, 227, 1) 80%, rgba(245, 246, 246, 1) 100%);
            background: -moz-linear-gradient(-45deg, rgba(245, 246, 246, 1) 0%, rgba(219, 220, 226, 1) 21%, rgba(184, 186, 198, 1) 49%, rgba(221, 223, 227, 1) 80%, rgba(245, 246, 246, 1) 100%);
            background: -o-linear-gradient(-45deg, rgba(245, 246, 246, 1) 0%, rgba(219, 220, 226, 1) 21%, rgba(184, 186, 198, 1) 49%, rgba(221, 223, 227, 1) 80%, rgba(245, 246, 246, 1) 100%);
            filter: literal("progid:DXImageTransform.Microsoft.gradient(startColorstr = '#F8F8F8', endColorstr = '#A0A0A0')");
        }

        .titel {
            color: black;
            font-size: 16px;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold;
        }

        .rewards {
            color: black;
            font-size: 12px;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold;
        }

        .description {
            color: black;
            font-size: 12px;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold;
        }
    </ui:style>

    <ui:with field='res'
             type='com.btxtech.game.jsre.client.dialogs.quest.QuestImages'/>

    <g:HorizontalPanel styleName="{style.itemplate}"
                       spacing="5" width="100%">
        <g:Cell verticalAlignment="ALIGN_MIDDLE" width="50px">
            <g:Image resource='{res.mission}'/>
        </g:Cell>
        <g:Cell verticalAlignment="ALIGN_MIDDLE">
            <g:VerticalPanel>
                <g:Label styleName="{style.titel}" ui:field="titel"/>
                <g:Label styleName="{style.rewards}" ui:field="rewards"/>
                <g:Cell width="">
                    <g:DisclosurePanel open="false">
                        <g:header>Details</g:header>
                        <g:HTML ui:field="description" styleName="{style.description}" width=""/>
                    </g:DisclosurePanel>
                </g:Cell>
            </g:VerticalPanel>
        </g:Cell>
        <g:Cell verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_RIGHT">
        	<g:Button ui:field="button" text="Go"/>
        </g:Cell>
    </g:HorizontalPanel>
</ui:UiBinder> 