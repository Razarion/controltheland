<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .control {
            background-color: #888888;
        }

        .simulation {
            border: 1px solid black;
        }

    </ui:style>
    <g:HorizontalPanel>
        <g:VerticalPanel width="300px" height="100%">
            <g:HorizontalPanel styleName="{style.control}" width="100%" height="">
                <g:ListBox ui:field="configurationSelector"/>
                <g:Cell horizontalAlignment="ALIGN_RIGHT">
                    <g:Button text="Save" ui:field="saveButton"/>
                </g:Cell>
            </g:HorizontalPanel>
            <g:SimplePanel width="100%" height="100%" ui:field="configurationPanel"/>
        </g:VerticalPanel>
        <g:VerticalPanel styleName="{style.simulation}">
            <g:SimplePanel width="100%" ui:field="simulationControlPanel"/>
            <g:SimplePanel ui:field="simulationPanel"/>
        </g:VerticalPanel>
    </g:HorizontalPanel>
</ui:UiBinder> 