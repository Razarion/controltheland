<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .receivingBoxStyle {
            overflow-x: hidden;
            overflow-y: scroll;
            color: #c0bdb2;
            border: 1px solid #bbbcba;
            background-color: #031723;
            box-sizing: border-box;
            -moz-box-sizing: border-box;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 11px;
        }

        .sendBoxStyle {
            margin: 0;
            padding: 0;
            color: #c0bdb2;
            border: 1px solid #bbbcba;
            background-color: #031723;
            box-sizing: border-box;
            -moz-box-sizing: border-box;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 11px;
        }

        .chatConfigButtonStyle {
            margin: 0;
            padding: 0;
        }
    </ui:style>

    <ui:with field='res' type='com.btxtech.game.jsre.client.cockpit.chat.images.ChatImages'/>
    <ui:with field='msg' type='com.btxtech.game.jsre.client.ClientI18nConstants'/>
    <g:DockPanel width="100%" height="100%">
        <g:Dock direction="CENTER" width="100%" height="100%">
            <g:HTML ui:field="receivingBox" styleName="{style.receivingBoxStyle}" width="100%" height="100%"/>
        </g:Dock>
        <g:Dock direction="SOUTH" width="100%">
            <g:HorizontalPanel>
                <g:Cell verticalAlignment="ALIGN_MIDDLE">
                    <g:PushButton ui:field="chatConfigButton" title="{msg.tooltipChatMenu}"
                                  styleName="gwt-PushButton {style.chatConfigButtonStyle}">
                        <g:upFace image='{res.globe}'/>
                    </g:PushButton>
                </g:Cell>
                <g:Cell verticalAlignment="ALIGN_MIDDLE" width="100%">
                    <g:TextBox ui:field="sendBox" width="100%" height="21px" styleName="{style.sendBoxStyle}"/>
                </g:Cell>
            </g:HorizontalPanel>
        </g:Dock>
    </g:DockPanel>
</ui:UiBinder> 