<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .title {
            color: black;
            font-size: 12px;
            font-family: Arial, Helvetica, sans-serif;
            font-weight: bold;
        }

        .description {
            color: black;
            font-size: 12px;
            font-family: Arial, Helvetica, sans-serif;
        }
    </ui:style>
    <ui:with field='msg'
             type='com.btxtech.game.jsre.client.ClientI18nConstants'/>

    <g:VerticalPanel>
        <g:Label ui:field="titleLabel" styleName="{style.title}"/>
        <g:HTML ui:field="htmlLabel" styleName="{style.description}"/>
    </g:VerticalPanel>
</ui:UiBinder> 