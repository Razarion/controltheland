<module rename-to='game'>
    <source path="client"/>
    <source path="common"/>

    <!-- Inherit the core Web Toolkit stuff.                        -->
    <inherits name='com.google.gwt.user.User'/>
    <!-- GWT Issue 5691: Logging mus be at the beginning otherwise log are lost in onModuleLoad() method-->
    <inherits name="com.google.gwt.logging.Logging"/>
    <inherits name="com.google.gwt.user.Debug"/>
    <!-- Inherit the default GWT style sheet.  You can change       -->
    <!-- the theme of your GWT application by uncommenting          -->
    <!-- any one of the following lines.                            -->
    <inherits name='com.google.gwt.user.theme.standard.Standard'/>
    <inherits name="com.google.gwt.widgetideas.HyperlinkOverride"/>
    <inherits name='com.google.gwt.widgetideas.GWTCanvas'/>
    <inherits name='com.google.gwt.widgetideas.GlassPanel'/>
    <!--inherits name="com.google.gwt.precompress.Precompress"/-->
    <!-- <inherits name='com.google.gwt.base.theme.chrome.Chrome'/> -->
    <!-- <inherits name='com.google.gwt.base.theme.dark.Dark'/>     -->

    <!-- Other module inherits                                      -->

    <!-- Logging Properties-->
    <set-property name="gwt.logging.logLevel" value="FINEST"/>
    <set-property name="gwt.logging.firebugHandler" value="DISABLED"/>
    <set-property name="gwt.logging.simpleRemoteHandler" value="DISABLED"/>
    <set-property name="gwt.logging.popupHandler" value="DISABLED"/>
    <set-property name="gwt.logging.systemHandler" value="ENABLED"/>

    <!-- Specify the app entry point class.                         -->
    <entry-point class='com.btxtech.game.jsre.client.Game'/>

    <servlet path="/movableService" class="com.btxtech.game.mockservlet.MockMovableServiceTestTransporter"/>
</module>
