<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
        .muzzleflashvisualisation {
          border: 1px solid black;
        }
	</ui:style>
	<g:VerticalPanel>
		<g:Grid>
			<g:row>
				<g:customCell>
					<g:InlineLabel text="Rotation" />
				</g:customCell>
				<g:customCell>
					<g:HorizontalPanel>
                        <g:Button text="Left" ui:field="rotationStepLeftButton" />
						<g:Cell verticalAlignment="ALIGN_MIDDLE">
							<g:Label text="New Label" ui:field="rotationStepLabel" />
						</g:Cell>
						<g:Button text="Right" ui:field="rotationStepRightButton" />
					</g:HorizontalPanel>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:InlineLabel text="Muzzle Flash Count" />
				</g:customCell>
				<g:customCell>
					<g:HorizontalPanel>
                        <g:IntegerBox ui:field="muzzleFlashCountField" />
						<g:Button text="+" ui:field="muzzleFlashCountIncrease" />
						<g:Button text="-" ui:field="muzzleFlashCountDecrease" />
					</g:HorizontalPanel>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:InlineLabel text="Edit Muzzle Flash" />
				</g:customCell>
				<g:customCell>
					<g:HorizontalPanel>
                        <g:Label text="New Label" ui:field="muzzleFlashEditLabel" />
						<g:Button text="+" ui:field="muzzleFlashEditPlusButton" />
						<g:Button ui:field="muzzleFlashEditMinusButton">-</g:Button>
					</g:HorizontalPanel>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:InlineLabel text="Muzzle X" />
				</g:customCell>
				<g:customCell>
					<g:HorizontalPanel>
						<g:IntegerBox width="60px" ui:field="muzzleFlashXField" />
						<g:Button text="+" ui:field="muzzleFlashXPlusButton" />
						<g:Button ui:field="muzzleFlashXMinusButton">-</g:Button>
					</g:HorizontalPanel>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:InlineLabel text="Muzzle Y" />
				</g:customCell>
				<g:customCell>
					<g:HorizontalPanel>
						<g:IntegerBox width="60px" ui:field="muzzleFlashYField" />
						<g:Button text="+" ui:field="muzzleFlashYPlusButton" />
						<g:Button text="-" ui:field="muzzleFlashYMinusButton" />
					</g:HorizontalPanel>
				</g:customCell>
			</g:row>
		</g:Grid>
		<g:SimplePanel width="400px" height="400px"
			ui:field="muzzleFlashVisualisationPanel" styleName="{style.muzzleflashvisualisation}" />
	</g:VerticalPanel>
</ui:UiBinder> 