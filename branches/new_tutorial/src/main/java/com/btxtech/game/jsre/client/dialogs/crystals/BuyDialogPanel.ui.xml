<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .message {
            padding-bottom: 5px;
        }
    </ui:style>
    <g:VerticalPanel width="23em">
        <g:Label ui:field="messageLabel" styleName="{style.message}"/>
        <g:Label ui:field="costLabel"/>
        <g:Label ui:field="balanceLabel"/>
    </g:VerticalPanel>
</ui:UiBinder> 