<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
        .simplepager {
            background: #FFFFFF;
            border-top: 2px solid #6f7277;
            color: black;
        }
        .padding {
        	padding-bottom: 10px;
        }
        .tablePanel {
            background: #FFFFFF;
            overflow-y: auto;
            overflow-x: hidden;
        }
    </ui:style>

    <ui:with field='msg'
             type='com.btxtech.game.jsre.client.ClientI18nConstants' />

    <g:VerticalPanel width="40em">
		<g:HorizontalPanel styleName="{style.padding}">
			<g:Cell verticalAlignment="ALIGN_MIDDLE">
				<g:Label text="{msg.guildNameFilter}" width=""/>
			</g:Cell>
			<g:Cell>
				<g:TextBox ui:field="guildName"/>
			</g:Cell>
		</g:HorizontalPanel>
        <g:Label styleName="{style.padding}" text="{msg.guildToSendRequest}"/>
        <g:SimplePanel width="100%" height="25em" styleName="{style.tablePanel}">
            <p1:CellTable ui:field="guildTable" width="100%"/>
        </g:SimplePanel>
		<g:Cell horizontalAlignment="ALIGN_CENTER">
            <g:SimplePanel styleName="{style.simplepager}">
                <p1:SimplePager location="CENTER" ui:field="simplePager"/>
            </g:SimplePanel>
		</g:Cell>
	</g:VerticalPanel>
</ui:UiBinder> 